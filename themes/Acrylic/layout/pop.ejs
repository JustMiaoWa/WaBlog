<script>
    let addBox,hideBox
    var helloBox = document.querySelector('#isHello');
    // È¶ñÈ°µÂà∑Êñ∞
    window.addEventListener('load',()=> { 
        isHome()
    })
    document.addEventListener('pjax:send', () => { 
        clearTimeout(addBox)
        clearTimeout(hideBox)
     })
    document.addEventListener('pjax:complete',function(){
        isHome()
    })
    const isHome = function(){
        helloBox.classList.remove("ani_box")
        helloBox.classList.remove("hide_box")
        helloBox.style.display = 'none';
        if (window.location.pathname === '/') {
            addBox = setTimeout(() => {
                helloBox.style.display = 'block';
                helloBox.classList.add("ani_box")
            },500)
            hideBox = setTimeout(() => {
                // helloBox.classList.remove("ani_box")
                helloBox.classList.add("hide_box")
            },3500)
        }else{
            helloBox.style.display = 'none';
        }
    }
    



    
</script>
